{{> header}}

<div class="mxt-wrapper--page-title">
    <div class="row">
        <div class="columns large-8 large-offset-2">
            <h1 class="text-center">{{#i18n}}about.title{{/i18n}}</h1>
        </div>
    </div>
</div>

<div class="mxt-wrapper--page-content">
    <div class="row">
        <div class="column large-12">
            <div class="callout">

                <p class="text-center lead">{{#i18n}}about.story1{{/i18n}}</p>
                <p>{{#i18n}}about.story2{{/i18n}}</p>
                <p>{{#i18n}}about.story3{{/i18n}}</p>

                <h2 class="subheader text-center mxt-subheader--space">{{#i18n}}about.teamtitle{{/i18n}}</h2><br />

                <div class="mxt-wrapper--callout">
                {{#staff}}
                    <div class="row align-middle mxt-wrapper--row">
                        <div class="small-12 medium-4 columns text-center">
                            <div class="mxt-img-avatar__wrapper"><img src="https://www.gravatar.com/avatar/{{emailHash}}?size=400" class="mxt-img-avatar__speaker" alt="{{firstname}} {{lastname}} photo"/></div>
                        </div>
                        <div class="small-12 medium-8 columns">
                            <h3>{{firstname}} {{lastname}}</h3>
                            {{description}}
                            <ul class="menu simple">
                            {{#links}}
                                <li><a href="{{url}}" target="_blank">{{name}}</a></li>
                            {{/links}}
                            </ul>
                        </div>
                    </div>
                {{/staff}}
                </div>
                <br />

                <h2 class="subheader text-center mxt-subheader--space">{{#i18n}}about.inactiveteamtitle{{/i18n}}</h2><br />

                <div class="mxt-wrapper--callout">
                    <p>{{#i18n}}about.inactiveteamdesc{{/i18n}}</p>
                    {{#inactiveStaff}}
                        <div class="row mxt-wrapper--row align-middle">
                            <div class="small-12 medium-4 columns text-center">
                                <div class="mxt-img-avatar__wrapper"><img src="https://www.gravatar.com/avatar/{{emailHash}}?size=400" class="mxt-img-avatar__speaker" alt="{{firstname}} {{lastname}} photo"/></div>
                            </div>
                            <div class="small-12 medium-8 columns">
                                <h3>{{firstname}} {{lastname}}</h3>
                                {{description}}
                                <ul class="menu simple">
                                    {{#links}}
                                        <li><a href="{{url}}" target="_blank">{{name}}</a></li>
                                    {{/links}}
                                </ul>
                            </div>
                        </div>
                    {{/inactiveStaff}}
                </div>
            </div>
        </div>
    </div>

{{> footer}}
