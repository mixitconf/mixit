{{> header}}

<div class="mxt-wrapper--header">
    <div class="row">
        <div class="col-12 text-right d-none d-md-inline">
            <img src="/images/svg/mxt-icon--edition.svg" class="mxt-icon--edition">
        </div>
        <div class="col-12 text-cente pt-5">
            <h1 class="hide">{{#i18n}}home.wrapper.text{{/i18n}}
                <img src="/images/svg/mxt-icon--heart.svg" class="mxt-icon--heart"
                    alt="{{#i18n}}home.wrapper.title{{/i18n}}"></h1>
            <h2 class="pt-2 mxt-text--small">
                <small>{{#i18n}}home.wrapper.dates{{/i18n}}</small>
            </h2>
            <p class="pb-5">
                <img src="/images/svg/accessibility/mxt-icon--child-care.svg" class="mxt-icon--social" title="{{#i18n}}home.accessibility.childcare{{/i18n}}" alt="{{#i18n}}home.accessibility.childcare{{/i18n}}">
                <img src="/images/svg/accessibility/mxt-icon--hearing-impaired.svg" class="mxt-icon--social" title="{{#i18n}}home.accessibility.hearing.impaired{{/i18n}}" alt="{{#i18n}}home.accessibility.hearing.impaired{{/i18n}}">
                <img src="/images/svg/accessibility/mxt-icon--motor-disability.svg" class="mxt-icon--social" title="{{#i18n}}home.accessibility.motor.disability{{/i18n}}" alt="{{#i18n}}home.accessibility.motor.disability{{/i18n}}">
                <img src="/images/svg/accessibility/mxt-icon--pregnant.svg" class="mxt-icon--social" title="{{#i18n}}home.accessibility.pregnant{{/i18n}}" alt="{{#i18n}}home.accessibility.pregnant{{/i18n}}">
            </p>
        </div>
    </div>
</div>
<div class="container mxt-wrapper--home-content">
    <p class="lead">{{#i18n}}home.2022.intro{{/i18n}}</p>

    <h2 class="subheader text-center pt-5">{{#i18n}}home.sponsors.title{{/i18n}}</h2>
    <p class="pt-2">{{#i18n}}home.2022.sponsor{{/i18n}}</p>
    <p class="text-center">
        <a class="mxt-anchor--uppercase btn btn-primary mxt-btn-primary"
           href="{{#i18n}}home.sponsors.pdf.url{{/i18n}}">{{#i18n}}home.sponsors.pdf{{/i18n}}</a>
    </p>

    <h2 class="subheader text-center pt-5">{{#i18n}}home.lottery.title{{/i18n}}</h2>
    <p class="pt-2">{{#i18n}}home.lottery.description{{/i18n}}</p>

    <h2 class="subheader text-center pt-5">{{#i18n}}cfp.title{{/i18n}}</h2>
    <p class="pt-2">{{#i18n}}cfp.description{{/i18n}}</p>
    <p class="text-center pt-2">
        <a class="mxt-anchor--uppercase btn btn-primary mxt-btn-primary"
           href="https://www.papercall.io/mixit2022">{{#i18n}}cfp.action{{/i18n}}</a>
    </p>

    <div class="mxt-tracks row">
        <div class="col-12 col-md-6 col-lg-4 row pt-2">
            <div class="col-4 col-md-3 col-lg-3 text-center">
                <img src="/images/svg/mxt-icon--tech.svg" class="mxt-icon--cat__home"
                     alt="{{#i18n}}home.topics.tech.title{{/i18n}}">
            </div>
            <div class="col-8 col-md-9 col-lg-9">
                <h3 style="margin-bottom: -0.2rem;">{{#i18n}}home.topics.tech.title{{/i18n}}</h3>
                <small>{{#i18n}}home.topics.tech.description{{/i18n}}</small>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-4 row pt-2">
            <div class="col-4 col-md-3 col-lg-3 text-center">
                <img src="/images/svg/mxt-icon--design.svg" class="mxt-icon--cat__home"
                     alt="{{#i18n}}home.topics.design.title{{/i18n}}">
            </div>
            <div class="col-8 col-md-9 col-lg-9">
                <h3 style="margin-bottom: -0.2rem;">{{#i18n}}home.topics.design.title{{/i18n}}</h3>
                <small>{{#i18n}}home.topics.design.description{{/i18n}}</small>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-4 row pt-2">
            <div class="col-4 col-md-3 col-lg-3 text-center">
                <img src="/images/svg/mxt-icon--science.svg" class="mxt-icon--cat__home"
                     alt="{{#i18n}}home.topics.science.title{{/i18n}}">
            </div>
            <div class="col-8 col-md-9 col-lg-9">
                <h3 style="margin-bottom: -0.2rem;">{{#i18n}}home.topics.science.title{{/i18n}}</h3>
                <small>{{#i18n}}home.topics.science.description{{/i18n}}</small>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-4 row pt-2">
            <div class="col-4 col-md-3 col-lg-3 text-center">
                <img src="/images/svg/mxt-icon--aliens.svg" class="mxt-icon--cat__home"
                     alt="{{#i18n}}home.topics.aliens.title{{/i18n}}">
            </div>
            <div class="col-8 col-md-9 col-lg-9">
                <h3 style="margin-bottom: -0.2rem;">{{#i18n}}home.topics.aliens.title{{/i18n}}</h3>
                <small>{{#i18n}}home.topics.aliens.description{{/i18n}}</small>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-4 row pt-2">
            <div class="col-4 col-md-3 col-lg-3 text-center">
                <img src="/images/svg/mxt-icon--team.svg" class="mxt-icon--cat__home"
                     alt="{{#i18n}}home.topics.team.title{{/i18n}}">
            </div>
            <div class="col-8 col-md-9 col-lg-9">
                <h3 style="margin-bottom: -0.2rem;">{{#i18n}}home.topics.team.title{{/i18n}}</h3>
                <small>{{#i18n}}home.topics.team.description{{/i18n}}</small>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-4 row pt-2">
            <div class="col-4 col-md-3 col-lg-3 text-center">
                <img src="/images/svg/mxt-icon--ethics.svg" class="mxt-icon--cat__home"
                     alt="{{#i18n}}home.topics.ethics.title{{/i18n}}">
            </div>
            <div class="col-8 col-md-9 col-lg-9">
                <h3 style="margin-bottom: -0.2rem;">{{#i18n}}home.topics.ethics.title{{/i18n}}</h3>
                <small>{{#i18n}}home.topics.ethics.description{{/i18n}}</small>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-4 row pt-2">
            <div class="col-4 col-md-3 col-lg-3 text-center">
                <img src="/images/svg/mxt-icon--lifestyle.svg" class="mxt-icon--cat__home"
                     alt="{{#i18n}}home.topics.lifestyle.title{{/i18n}}">
            </div>
            <div class="col-8 col-md-9 col-lg-9">
                <h3 style="margin-bottom: -0.2rem;">{{#i18n}}home.topics.lifestyle.title{{/i18n}}</h3>
                <small>{{#i18n}}home.topics.lifestyle.description{{/i18n}}</small>
            </div>
        </div>
    </div>

    <p class="pt-2 lead">{{#i18n}}cfp.format.description{{/i18n}}</p>
    <ul>
        <li>{{#i18n}}cfp.format.talk{{/i18n}}</li>
        <li>{{#i18n}}cfp.format.random{{/i18n}}</li>
        <li>{{#i18n}}cfp.format.workshop{{/i18n}}</li>
        <li>{{#i18n}}cfp.format.keynote{{/i18n}}</li>
    </ul>




</div>

<div class="container mxt-wrapper--home-content mt-5" style="background-color: #e6e6e6;">
    <h2 class="subheader pt-2 text-center">{{#i18n}}home.2022.previous{{/i18n}}</h2>
    <div class="row pt-2">
        <div class="col-md-5">
            <h2 class="pt-3">{{#i18n}}home.outline.title{{/i18n}}</h2>
            <br/>
            <p class="lead">{{#i18n}}home.outline.description1{{/i18n}}</p>
            <p>{{#i18n}}home.outline.description2{{/i18n}}</p>
        </div>
        <div class="col-md-7">
            <div class="mxt-wrapper--intrinsic">
                <iframe src="https://player.vimeo.com/video/346825478" class="mxt-wrapper--video-player vimeo"
                        allowfullscreen></iframe>
            </div>
        </div>
    </div>
    <h2 class="text-center pt-4 mb-4">
        <small>{{#i18n}}home.speakers.title{{/i18n}}</small>
    </h2>
    <div class="row">
        {{#stars-old}}
            {{> home-speaker }}
        {{/stars-old}}
    </div>
</div>

<div class="container mxt-wrapper--home-content mt-5">
    <h2 class="subheader pt-2 text-center">{{#i18n}}home.2022.knowledge{{/i18n}}</h2>

    <div class="row pt-2">
        <div class="col-md-5">
            <p class="lead pt-5">{{#i18n}}home.2022.quizz{{/i18n}}</p>
            <p>{{#i18n}}home.2022.videos{{/i18n}}</p>
        </div>
        <div class="col-md-7">
            <div class="mxt-wrapper--intrinsic">
                <iframe src="https://player.vimeo.com/video/560334460" class="mxt-wrapper--video-player vimeo"
                        allowfullscreen></iframe>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12 col-lg-10 offset-lg-1">
        <div class="text-center row justify-content-md-center">
            {{#sponsors-main}}
                <div class="col-3 text-center col-md-2">
                    {{> sponsor-detail }}
                </div>
            {{/sponsors-main}}
            {{#sponsors-others}}
                <div class="col-2 col-md-1 text-center">
                    {{> sponsor-detail }}
                </div>
            {{/sponsors-others}}
        </div>
    </div>
</div>




{{> footer}}
