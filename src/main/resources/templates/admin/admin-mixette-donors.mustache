{{> header}}
{{> header-common }}

<div class="mxt-wrapper--header-page-title">
    <h1 class="pt-3 pb-3">{{#i18n}}admin.donations.donor.title{{/i18n}}</h1>
</div>

<div class="container mxt-wrapper--page-content">
    <p>{{#i18n}}admin.donations.donor.count{{/i18n}} : <b>{{donations.size}}</b> | <a href="/{{#admin}}admin{{/admin}}{{#volunteer}}volunteer{{/volunteer}}/mixette-donation/create">{{#i18n}}common.actions.create{{/i18n}}</a></p>
    <table class="table-striped table table-bordered">
      <thead>
        <tr>
            <th>&nbsp;</th>
            <th>{{#i18n}}admin.donations.ticket{{/i18n}}</th>
            <th>{{#i18n}}admin.donations.login{{/i18n}}</th>
            <th>{{#i18n}}admin.donations.donor.number{{/i18n}}</th>
            <th>{{#i18n}}admin.donations.amount{{/i18n}}</th>
            <th>{{#i18n}}common.actions{{/i18n}}</th>
        </tr>
      </thead
      <tbody>
        {{#donations}}
        <tr>
            <td>{{rank}}</td>
            <td>{{ticketNumber}}</td>
            <td>{{#login}}{{login}}{{/login}}</td>
            <td>{{#number}}{{number}}{{/number}}</td>
            <td>{{amount}}</td>
            <td>
                <a href="/{{#admin}}admin{{/admin}}{{#volunteer}}volunteer{{/volunteer}}/mixette-donation/donor?ticketNumber={{ticketNumber}}">{{#i18n}}common.actions.view{{/i18n}}</a>
            </td>
        </tr>
        {{/donations}}
      </tbody>
    </table>
</div>

{{> footer}}
