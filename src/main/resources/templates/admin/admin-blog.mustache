{{> header}}
{{> header-common }}

<div class="mxt-wrapper--header-page-title">
    <h1 class="pt-3 pb-3">{{#i18n}}admin.blog.title{{/i18n}}</h1>
</div>

<div class="container mxt-wrapper--page-content">
    <p>{{#i18n}}admin.blog.count{{/i18n}} : <b>{{posts.size}}</b> | <a href="/admin/post/create">{{#i18n}}common.actions.create{{/i18n}}</a></p>
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
            <th>{{#i18n}}admin.blog.table.title{{/i18n}}</th>
            <th>{{#i18n}}admin.blog.table.author{{/i18n}}</th>
            <th>{{#i18n}}common.actions{{/i18n}}</th>
        </tr>
      </thead>
      <tbody>
        {{#posts}}
        <tr>
            <td>{{title}}</td>
            <td>{{author.firstname}} {{author.lastname}}</td>
            <td>
                <a href="/admin/post/edit/{{id}}">{{#i18n}}common.actions.update{{/i18n}}</a><br />
                <a href="/blog/{{slug}}" target="_blank">{{#i18n}}common.actions.view{{/i18n}}</a>
            </td>
        </tr>
        {{/posts}}
      </tbody>
    </table>
</div>

{{> footer}}
