{{> header}}


<div class="container-xxl">
    <h1 class="pt-3 pb-3">{{#i18n}}admin.blog.title{{/i18n}}</h1>
</div>

<div class="container-xxl">
    <div class="mxt-btn-container pb-3">
        {{#i18n}}admin.blog.count{{/i18n}} : <b>{{posts.size}}</b>
        <div class="flex-fill"></div>
        <a  class="mxt-btn-light" href="/admin/post/create">{{#i18n}}common.actions.create{{/i18n}}</a>
    </div>
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
            <th>{{#i18n}}admin.blog.table.title{{/i18n}}</th>
            <th>{{#i18n}}admin.blog.table.title{{/i18n}}</th>
            <th>{{#i18n}}admin.blog.table.author{{/i18n}}</th>
            <th style="width: 8em">{{#i18n}}common.actions{{/i18n}}</th>
        </tr>
      </thead>
      <tbody>
        {{#posts}}
        <tr>
            <td>{{addedAt}}</td>
            <td>{{title}}</td>
            <td>{{author.firstname}} {{author.lastname}}</td>
            <td class="mxt-btn-container">
                <a href="/admin/post/edit/{{id}}" class="mxt-btn-light">
                    <img src="/images/svg/mxt-search-dark.svg" class="mxt-icon--cat__talks"
                         title="{{#i18n}}common.actions.update{{/i18n}}"/>
                </a>
            </td>
        </tr>
        {{/posts}}
      </tbody>
    </table>
</div>

{{> footer}}
