{{> header}}


<div class="container-xxl">
    <h1 class="pt-3 pb-3">{{#i18n}}admin.users.title{{/i18n}}</h1>
</div>

<div class="container-xxl">
    <div class="mxt-btn-container">
        <a href="/api/admin/newsletter" target="newsletter" class="mxt-btn-primary">{{#i18n}}common.actions.export{{/i18n}}</a>
    </div>

    <p>{{#i18n}}admin.users.count{{/i18n}} : <b>{{users.size}}</b></p>
    <table class="table-striped table table-bordered">
      <thead>
        <tr>
            <th>{{#i18n}}admin.users.table.lastname{{/i18n}}</th>
            <th>{{#i18n}}admin.users.table.firstname{{/i18n}}</th>
            <th>{{#i18n}}admin.users.table.email{{/i18n}}</th>
        </tr>
      </thead>
      <tbody>
        {{#users}}
        <tr>
            <td>{{lastname}}</td>
            <td>{{firstname}}</td>
            <td>{{email}}</td>
        </tr>
        {{/users}}
      </tbody>
    </table>
</div>

{{> footer}}
