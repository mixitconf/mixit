<style>
    @media print {
        @page {
            margin-top: 1.6cm;
            margin-bottom: 1.1cm;
            margin-left: 0.8cm;
            margin-right: 0.8cm;
        }

        body {
            width: 21cm;
            height: 29.7cm;
            font-family: "Lato Light", Arial;
        }
        header {
            page-break-after: always;
        }
    }

    body {
        width: 21cm;
        height: 29.7cm;
        font-family: "Lato Light", Arial;
    }

    .grid-container {
        //border: 1px solid #232323;
        display: grid;
        column-gap: 0.5cm;
        row-gap: 0.5cm;
        grid-template-columns: auto auto auto;
    }

    .grid-cell {
        // border: 2px solid #000000;
        background-color: #0dcaf0;
        page-break-inside: avoid;
        text-align: center;
        padding-top: 0.5cm;
        width: 6.4cm;
        max-width: 6.4cm;
        max-height: 4.9cm;
        height: 4.9cm;
    }
</style>
<script src="/js/qrcode.min.js"></script>

<div class="grid-container">
    <header></header>
    <header></header>
    <header></header>
    {{#tickets}}
        <div class="grid-cell">
            <div style="font-size: 10px;font-family: 'Lato Black'">{{#pronoun}}
                {{#i18n}}admin.ticket.pronoun.{{ pronoun }}{{/i18n}}
            {{/pronoun}}&nbsp;</div>
            <div style="font-size: 27px; font-family: Lato; margin-top: 5px;text-overflow:ellipsis;height: 29px">{{ firstname }}</div>
            <div style="font-size: 20px; font-family: Lato;text-overflow:ellipsis;height: 22px;margin-bottom: 4px;white-space: nowrap;">{{ lastname }}</div>
            <div style="height: 2cm;width: 2cm; text-align: center;margin: auto" id="{{ number }}"></div>
            <script>
                document.getElementById('{{ number }}').innerHTML = new QRCode({
                    content: 'https://mixitconf.org/volunteer/mixette-donation/create/{{ number }}',
                    container: 'svg-viewbox',
                    join: true,
                    ecl: 'L'
                }).svg();
            </script>
            <div style="font-size: 12px;font-family: 'Lato Black'; margin-top: 5px">{{ type }}</div>
            <div>&nbsp;</div>
        </div>
    {{/tickets}}
</div>
{{^tickets}}No ticket to print for the moment{{/tickets}}
