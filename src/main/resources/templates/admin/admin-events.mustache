{{> header}}


<div class="container-xxl">
    <h1 class="pt-3 pb-3">{{#i18n}}admin.events.title{{/i18n}}</h1>
</div>

<div class="container-xxl">
    <div class="mxt-btn-container pb-3">
        {{#i18n}}admin.events.count{{/i18n}} : <b>{{events.size}}</b>
        <div class="flex-fill"></div>
        <a  class="mxt-btn-light" href="/admin/events/create">{{#i18n}}common.actions.create{{/i18n}}</a>
    </div>

    <table class="table table-striped table-bordered">
      <thead>
        <tr>
            <th>{{#i18n}}admin.events.table.id{{/i18n}}</th>
            <th>{{#i18n}}admin.events.table.start{{/i18n}}</th>
            <th>{{#i18n}}admin.events.table.end{{/i18n}}</th>
            <th>{{#i18n}}admin.events.table.year{{/i18n}}</th>
            <th>{{#i18n}}admin.events.table.current{{/i18n}}</th>
            <th style="width: 8em">{{#i18n}}common.actions{{/i18n}}</th>
        </tr>
      </thead>
      <tbody>
        {{#events}}
        <tr>
            <td>{{id}}</td>
            <td>{{start}}</td>
            <td>{{end}}</td>
            <td>{{year}}</td>
            <td>{{current}}</td>
            <td class="mxt-btn-container ">
                <a href="/admin/events/edit/{{id}}" class="mxt-btn-light">
                    <img src="/images/svg/mxt-search-dark.svg" class="mxt-icon--cat__talks"
                    title="{{#i18n}}common.actions.update{{/i18n}}"/>

                </a>
            </td>
        </tr>
        {{/events}}
      </tbody>
    </table>
</div>

{{> footer}}
