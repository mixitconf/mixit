{{> header}}

<div class="container-xxl">
    <h1 class="text-center pt-5">
        {{#isLogin}}{{#i18n}}login.title{{/i18n}}{{/isLogin}}
        {{^isLogin}}{{#i18n}}newsletter.title{{/i18n}}{{/isLogin}}
    </h1>
    <div class="row">
        <div class="col-10 offset-1 col-lg-6 offset-lg-3 text-center">
            <form {{#isLogin}}action="/signin"{{/isLogin}}
                  {{^isLogin}}action="/newsletter-subscribe"{{/isLogin}}
                  method="post">
                <div class="row">
                    <div class="col">
                        {{#isLogin}}{{#i18n}}login.confirmation{{/i18n}}{{/isLogin}}
                        {{^isLogin}}{{#i18n}}newsletter.confirmation{{/i18n}}{{/isLogin}}
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col" style="text-align: left">
                        <label for="email" class="form-label">{{#i18n}}user.form.email{{/i18n}}</label><br>
                        {{email}}
                        <input type="hidden" name="email" value="{{email}}"/>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col" style="text-align: left">
                        <input type="password" class="form-control" name="token" placeholder="Token" {{#token}}value="{{token}}"{{/token}}/>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="large-12 large-centered columns">
                        <button type="submit" class="btn btn-primary mxt-btn-primary">
                            {{#isLogin}}{{#i18n}}login.action.signin{{/i18n}}{{/isLogin}}
                            {{^isLogin}}{{#i18n}}newsletter.action.signin{{/i18n}}{{/isLogin}}
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

{{> footer}}
