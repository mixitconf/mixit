{{> header}}

<div class="mxt-wrapper--header">
    <h1 class="text-center pt-5">{{#i18n}}ticketing.title{{/i18n}} 2022</h1>
    <p class="text-center pb-5">
        {{#i18n}}home.wrapper.dates{{/i18n}}
    </p>
</div>
<div class="container mxt-wrapper--page-content">
    <div class="lead">
        {{#i18n}}ticketing.text{{/i18n}}
    </div>
    <div class="row">
        <div class="col-10 offset-1 col-lg-6 offset-lg-3 text-center">
            <div class="text-center">
                <img src="/images/svg/mxt-icon--logo-firework.svg" class="mxt-img__logo"
                     style="position: relative; top: -1em">
            </div>
            <form action="/ticketing" method="post">
                <input type="text" class="form-control" name="firstname"
                       placeholder="{{#i18n}}ticketing.firstname{{/i18n}}" required>
                <input type="text" class="form-control mt-2" name="lastname"
                       placeholder="{{#i18n}}ticketing.lastname{{/i18n}}" required>
                <input type="email" class="form-control mt-2" name="email"
                       placeholder="{{#i18n}}ticketing.email{{/i18n}}" required>
                <button class="btn btn-outline-primary  mt-3">{{#i18n}}ticketing.submit{{/i18n}}"</button>
            </form>
        </div>
    </div>
    <p class="pt-3" >{{#i18n}}ticketing.description.hack{{/i18n}}</p>

    <h2 class="pt-2">{{#i18n}}ticketing.description.why{{/i18n}}</h2>
    <p>{{#i18n}}ticketing.description.intro{{/i18n}}</p>
    <p>{{#i18n}}ticketing.description.how{{/i18n}}</p>
    <p>{{#i18n}}ticketing.description.plus{{/i18n}}</p>

    <div class="row">
        <div class="mxt-img--talk col"><a href="https://farm5.staticflickr.com/4165/34230277200_f6f40b6662_z_d.jpg"><img
                src="https://farm5.staticflickr.com/4165/34230277200_f6f40b6662_z_d.jpg"
                aria-label="Closing keynote" class="mxt-img--grayscale"/></a></div>
        <div class="mxt-img--talk col"><a href="https://farm5.staticflickr.com/4174/34574860086_0f032da82c_z_d.jpg"><img
                src="https://farm5.staticflickr.com/4174/34574860086_0f032da82c_z_d.jpg"
                aria-label="CPE Lyon" class="mxt-img--grayscale"/></a></div>
        <div class="mxt-img--talk col"><a href="https://farm5.staticflickr.com/4172/34485934691_037ebdd5d9_z_d.jpg"><img
                src="https://farm5.staticflickr.com/4172/34485934691_037ebdd5d9_z_d.jpg"
                aria-label="CPE Lyon" class="mxt-img--grayscale"/></a></div>
    </div>
</div>
{{> footer}}
