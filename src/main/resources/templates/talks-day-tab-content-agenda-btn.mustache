<div class="mxt-agenda--talk p-1">
    {{#topic}}
    <div class="mxt-text--cat mxt-text--cat-{{topic}}">
        <img src="/images/svg/mxt-icon--{{topic}}.svg"
             class="mxt-icon--cat mxt-icon--cat__talks"
             alt="{{#i18n}}topics.{{topic}}.title{{/i18n}}"/>
        <span>{{#i18n}}topics.{{topic}}.title{{/i18n}}</span>
    </div>
        {{#hasAtLeastOneVideo}}<img src="/images/svg/mxt-icon-video-dark.svg" style="max-height: 1em">{{/hasAtLeastOneVideo}}
    {{/topic}}
    {{^onair}}
    <div class="mxt-text--cat-format">
        #{{#i18n}}talk.format.{{format}}{{/i18n}}
        {{#connected}}
            {{#favorite}}
                <img src="/images/svg/favorites/mxt-favorite.svg" class="mxt-icon--cat__talks"
                     id="favorite-{{id}}"/>
            {{/favorite}}
            {{^favorite}}
                <img src="/images/svg/favorites/mxt-favorite-non.svg"
                     class="mxt-icon--cat__talks" id="favorite-{{id}}"/>
            {{/favorite}}
        {{/connected}}
    </div>
    {{/onair}}
    <div>
        <small>{{#start}}{{start}} - {{end}}{{/start}}</small>
        {{#onair}}
            {{#connected}}
                {{#favorite}}
                    <img src="/images/svg/favorites/mxt-favorite.svg" class="mxt-icon--cat__talks"
                         id="favorite-{{id}}"/>
                {{/favorite}}
                {{^favorite}}
                    <img src="/images/svg/favorites/mxt-favorite-non.svg"
                         class="mxt-icon--cat__talks" id="favorite-{{id}}"/>
                {{/favorite}}
            {{/connected}}
        {{/onair}}
    </div>
    <div class="mxt-agenda--talk-title"><small>{{title}}</small></div>
    {{#speakers}}
        <div><small>{{firstname}}&nbsp;{{lastname}}</small></div>
    {{/speakers}}
</div>
