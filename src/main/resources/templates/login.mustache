{{> header}}

<div class="mxt-wrapper--header">
    <h1 class="text-center pt-5">
        {{#isLogin}}{{#i18n}}login.title{{/i18n}}{{/isLogin}}
        {{^isLogin}}{{#i18n}}newsletter.title{{/i18n}}{{/isLogin}}
    </h1>
</div>

<div class="container mxt-wrapper--page-content">
    <div>
        {{#isLogin}}{{#i18n}}login.action.signin.description{{/i18n}}{{/isLogin}}
        {{^isLogin}}{{#i18n}}newsletter.action.signin.description{{/i18n}}{{/isLogin}}
    </div>
    <div class="row pt-5 pb-5">
        <div class="col-10 offset-1 col-lg-6 offset-lg-3 text-center">

            <form method="post">
                <input type="email" class="form-control" name="email" placeholder="contact@mixitconf.org"
                       onchange="document.getElementById('email_token').value = this.value" required/>
                <button class="mt-3 mr-3 btn btn-primary mxt-btn-primary"
                    {{#isLogin}}onclick="document.forms[0].action='/login';document.forms[0].submit()"{{/isLogin}}
                    {{^isLogin}}onclick="document.forms[0].action='/newsletter-login';document.forms[0].submit()"{{/isLogin}}
                >
                    {{#isLogin}}{{#i18n}}login.action.signin{{/i18n}}{{/isLogin}}
                    {{^isLogin}}{{#i18n}}newsletter.action.signin{{/i18n}}{{/isLogin}}
                </button>
                &nbsp;
                <button class="mt-3 btn btn-primary mxt-btn-primary"
                    {{#isLogin}}onclick="document.forms[0].action='/send-token';document.forms[0].submit()"{{/isLogin}}
                    {{^isLogin}}onclick="document.forms[0].action='/newsletter-send-token';document.forms[0].submit()"{{/isLogin}}
                >
                    {{#isLogin}}{{#i18n}}login.action.token{{/i18n}}{{/isLogin}}
                    {{^isLogin}}{{#i18n}}newsletter.action.token{{/i18n}}{{/isLogin}}
                </button>
            </form>
        </div>
    </div>
    <div><small>{{#i18n}}user.form.rgpd{{/i18n}}</small></div>
</div>
{{> footer}}
