{{> header}}

<div class="container-xxl">
    <h1>
        {{#images}}
            {{#sections}}
                <b>{{#i18n}}{{i18nLabel}}{{/i18n}}</b>
            {{/sections}}
        {{/images}}
    </h1>
    {{^singleImage}}
        <div class="text-center mb-4">
            <a href="{{localePrefix}}/{{year}}/medias" class="btn btn-outline-primary">{{#i18n}}images.back{{/i18n}}</a>
        </div>
    {{/singleImage}}
    <div class="mxt-image--player-container">
        {{#images.sections}}
            {{#pictures}}
                {{#singleImage}}
                    <div>
                        <div class="text-center mb-4">
                            {{#previousImage}}
                                <a href="{{localePrefix}}/{{year}}/medias/images/{{sectionId}}?url={{previousImage}}"
                                class="btn btn-outline-primary">&lt;</a>
                            {{/previousImage}}
                            <a href="{{localePrefix}}/{{year}}/medias/images/{{sectionId}}"
                               class="btn btn-outline-primary">{{#i18n}}images.back{{/i18n}}</a>
                            {{#nextImage}}
                                <a href="{{localePrefix}}/{{year}}/medias/images/{{sectionId}}?url={{nextImage}}"
                                class="btn btn-outline-primary">&gt;</a>
                            {{/nextImage}}
                        </div>
                        <div class="mxt-video--player-video">
                            <img class="mxt-img--speakers card-image mxt-img--lazyload"
                                 data-src="https://raw.githubusercontent.com/mixitconf/mixitconf-images/main/{{year}}/{{sectionId}}/{{name}}"
                                 src="https://raw.githubusercontent.com/mixitconf/mixitconf-images/main/{{year}}/{{sectionId}}/{{name}}">
                        </div>
                    </div>
                {{/singleImage}}
            {{/pictures}}
        {{/images.sections}}
    </div>
    <div class="mxt-video--player-container">
        {{#images.sections}}
            {{#pictures}}
                {{^singleImage}}
                    <div>
                        <div class="mxt-video--player-header mb-2">
                        </div>
                        <div class="mxt-video--player-image">
                            <a href="{{localePrefix}}/{{year}}/medias/images/{{sectionId}}?url={{name}}">
                                <img class="mxt-img--speakers mxt-img--lazyload"
                                 data-src="https://raw.githubusercontent.com/mixitconf/mixitconf-images/main/{{year}}/{{sectionId}}/{{name}}">
                            </a>
                        </div>
                    </div>
                {{/singleImage}}
            {{/pictures}}
        {{/images.sections}}
    </div>
</div>

{{#connected}}
    <input type="hidden" id="email" value="{{email}}"/>
{{/connected}}

