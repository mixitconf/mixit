{{> header}}

<div class="container-xxl">
    {{> talks-header}}
    {{#hasTalk}}
        <div class="container-xxl pt-4 pb-4">
            <!-- Area used when user want to see the agenda view -->
            {{#canDisplayAgenda}}
            <ul class="nav nav-tabs mxt-nav-tabs" id="talks" role="tablist">
                {{#talks.day1}}
                    {{> talks-day-tab }}
                {{/talks.day1}}
                {{#talks.day2}}
                    {{> talks-day-tab }}
                {{/talks.day2}}
                {{#talks.day3}}
                    {{> talks-day-tab }}
                {{/talks.day3}}
            </ul>
            {{/canDisplayAgenda}}
            <div class="tab-content">
                {{#displayAgenda}}
                    {{> talks-day-tab-criteria }}
                    <div class="text-center lead p-2 mb-2">{{#i18n}}talks.welcome.start{{/i18n}}</div>
                    {{#talks.day1}}
                        {{> talks-day-tab-content-agenda }}
                    {{/talks.day1}}
                    {{#talks.day2}}
                        {{> talks-day-tab-content-agenda }}
                    {{/talks.day2}}
                    {{#talks.day3}}
                        {{> talks-day-tab-content-agenda }}
                    {{/talks.day3}}
                {{/displayAgenda}}
                {{^displayAgenda}}
                    {{#talks.day1}}
                        {{> talks-day-tab-content }}
                    {{/talks.day1}}
                    {{#talks.day2}}
                        {{> talks-day-tab-content }}
                    {{/talks.day2}}
                    {{#talks.day3}}
                        {{> talks-day-tab-content }}
                    {{/talks.day3}}
                {{/displayAgenda}}
            </div>
        </div>
    {{/hasTalk}}
    {{^talkByRooms}}
       <p class="pt-3">
        {{#i18n}}favorite.none{{/i18n}}
       </p>
    {{/talkByRooms}}
</div>

{{> footer-sponsor}}
