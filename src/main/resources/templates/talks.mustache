{{#talks.entrySet}}
    <div class="container mxt-wrapper--page-content pb-4">
        {{#key}}<h2>{{key}}</h2>{{/key}}
        <div class="accordion" id="accordionTalk">
            {{#value}}
                <div class="accordion-item">
                    <h2 class="accordion-header" id="heading{{id}}">
                        <button class="accordion-button mxt-accordion-talk collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{id}}" aria-expanded="false" aria-controls="collapse{{id}}">
                            <div class="mxt-accordion-talk-line">
                            {{#topic}}
                                <div class="mxt-text--cat mxt-text--cat-{{topic}}">
                                    <img src="/images/svg/mxt-icon--{{topic}}.svg" class="mxt-icon--cat mxt-icon--cat__talks"
                                         alt="{{#i18n}}home.topics.{{topic}}.title{{/i18n}}"/>
                                    <span>{{#i18n}}home.topics.{{topic}}.title{{/i18n}}</span>
                                </div>
                            {{/topic}}
                            <div class="p-2"><small >{{#date}}{{date}}{{/date}}</small></div> <strong>{{#start}}{{start}} - {{end}}{{/start}}</strong>
                            </div>
                            <h3 class="mxt-text--talktitle">
                                {{#connected}}
                                    {{#favorite}}
                                        <img src="/images/svg/favorites/mxt-favorite.svg" class="mxt-icon--cat__talks" id="favorite-{{id}}"/>
                                    {{/favorite}}
                                    {{^favorite}}
                                        <img src="/images/svg/favorites/mxt-favorite-non.svg" class="mxt-icon--cat__talks" id="favorite-{{id}}"/>
                                    {{/favorite}}
                                {{/connected}}
                                {{title}}
                                {{#isEn}}<span class="mxt-text--cat mxt-text--cat-en">EN</span>{{/isEn}}
                            </h3>
                            <ul class="mxt-wrapper-list-inline">
                                {{#video}}
                                    <li><strong>&#x25ba; {{#i18n}}talks.title.video{{/i18n}}</strong></li>{{/video}}
                                <li class="mxt-text--cat-format">#{{#i18n}}talk.format.{{format}}{{/i18n}}</li>
                            </ul>
                            <ul class="mxt-wrapper-list-inline mb-0 pb-0">
                                {{#speakers}}
                                    <li>
                                        <span class="mxt-text--cat mxt-text--cat-speaker" style="background-color: #e6e6e6; padding: 0.3em;color: #2c233d">{{firstname}}&nbsp;{{lastname}}</span>
                                    </li>
                                {{/speakers}}
                            </ul>
                        </button>
                    </h2>
                    <div id="collapse{{id}}" class="accordion-collapse collapse" aria-labelledby="heading{{id}}" data-bs-parent="#accordionTalk">
                        <div class="accordion-body">
                            <div class="row mxt-wrapper--row">
                                <div class="col-sm-7 col-md-9 col-lg-8">
                                    <p class="mxt-text--cat-room">
                                        {{#roomLink}}<a href="{{#i18n}}{{roomLink}}{{/i18n}}" aria-label="{{#i18n}}{{room}}{{/i18n}}">{{#i18n}}{{room}}{{/i18n}}</a>{{/roomLink}}
                                        {{^roomLink}}{{#i18n}}{{room}}{{/i18n}}{{/roomLink}}
                                    </p>
                                </div>
                                <div class="col-sm-5 col-md-3 col-lg-4 text-right pb-2" style="text-align: right">
                                    <a href="{{localePrefix}}/{{event}}/{{slug}}" class="btn btn-outline-primary">{{#i18n}}talks.readmore{{/i18n}}</a>
                                </div>
                            </div>
                            <div>{{#markdown}}{{summary}}{{/markdown}}</div>
                            <div class="row">
                                {{#speakers}}
                                    <div class="menu-text col-6 col-md-2 text-center">
                                        <div class="mxt-img-avatar__wrapper"><a href="/user/{{login}}"><img
                                                data-src="{{#photoUrl}}{{photoUrl}}{{/photoUrl}}{{^photoUrl}}https://www.gravatar.com/avatar/{{#emailHash}}{{emailHash}}{{/emailHash}}?s=100&d={{baseUri}}%2Fimages%2Fpng%2Fmxt-icon--default-avatar.png{{/photoUrl}}"
                                            class="mxt-img-avatar__speaker mxt-img--lazyload"></a></div>
                                        <span><a href="/user/{{login}}">{{firstname}}&nbsp;{{lastname}}</a></span>
                                    </div>
                                {{/speakers}}
                            </div>
                        </div>
                    </div>
                </div>
            {{/value}}
        </div>
    </div>
    <div>&nbsp;</div>
{{/talks.entrySet}}


