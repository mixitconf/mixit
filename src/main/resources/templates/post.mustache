{{> header}}


<div class="container-xxl">
    <h3 class="mxt-text--cat-format">Blog MiXiT</h3>

    <h1 class="pt-3 ">{{post.title}}</h1>
    <p>{{#i18n}}blog.by{{/i18n}}
        <strong>{{post.author.firstname}}</strong>, {{#i18n}}blog.on{{/i18n}} <strong>{{post.addedAt}}</strong></p>

    {{#admin}}
        <div class="mxt-text--page-title pb-3">
            <a href="{{localePrefix}}/admin/post/edit/{{post.id}}" class="btn-outline-primary btn"
               style="margin-bottom: 0">{{#i18n}}common.actions.update{{/i18n}}</a>
        </div>
    {{/admin}}

    <article class="pt-2 pb-2">

        <h3 class="lead">{{#markdown}}{{post.headline}}{{/markdown}}</h3>

        {{#post.content}}
            <p>{{#markdown}}{{post.content}}{{/markdown}}</p>
        {{/post.content}}
    </article>
</div>
<script>
    const imgs = document.getElementsByTagName('img');
    for (const img of imgs) {
        const parent = img.parentElement;
        if (parent) {
            parent.style.textAlign = 'center';
        }
    }
</script>
{{> footer}}
